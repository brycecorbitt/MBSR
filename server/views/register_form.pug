extends layout

block body
  h2 User Registration Form for #{user.first_name} #{user.last_name} (
    font(color='blue') #{user.email}
    | )
  div(style="margin-left: 10%; margin-right: 10%;")
    form(action="" method="post")
      .form-group
        label(for='inputUsername') Enter Desired Username
        input#inputUsername.form-control(type='text' placeholder='username' name='username' required='required')
      .form-group
        label(for='inputPassword') Password
        input#inputPassword.form-control(type='password' placeholder='Password' name='password' required='required')
      .form-group
        label(for='inputPasswordConfirm') Confirm Password
        input#inputPasswordConfirm.form-control(type='password' placeholder='Password' name='password_confirm' required='required')
      br
      button.btn.btn-primary(type='submit') Submit
    if error
      br
      div.alert.alert-danger(role="alert") #{error}
