{
  "connection": "default",
  "collectionName": "events",
  "info": {
    "name": "event",
    "description": "For serving events via the “Local Events” section"
  },
  "options": {
    "increments": true,
    "timestamps": [
      "created_at",
      "updated_at"
    ],
    "comment": ""
  },
  "attributes": {
    "description": {
      "maxLength": 512,
      "type": "string"
    },
    "title": {
      "type": "string",
      "maxLength": 255,
      "required": true
    },
    "date": {
      "required": true,
      "type": "date"
    },
    "location": {
      "type": "string",
      "maxLength": 255,
      "required": true
    },
    "photo": {
      "model": "file",
      "via": "related",
      "plugin": "upload"
    }
  }
}